# Database
MONGO_URI=mongodb://localhost:27017/news-blog

# Server
PORT=4000
ADMIN_ORIGIN=http://localhost:3001

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# AI Providers
# OpenAI (ChatGPT)
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# AI Provider Selection: 'claude', 'openai', or 'both' (both = Claude primary, OpenAI fallback)
AI_PROVIDER=both

# Content Moderation
MODERATION_MODEL=omni-moderation-latest

# News Sources
# NewsAPI.org (optional)
NEWSAPI_KEY=your-newsapi-key

# Twitter/X Integration (RapidAPI)
RAPIDAPI_KEY=your-rapidapi-key
RAPIDAPI_HOST=twitter241.p.rapidapi.com

# Scheduled Jobs (Cron)
# Content Generation Job - Default: every 4 hours
CRON_CONTENT_GEN=0 */4 * * *

# News Scan Job - Default: every hour
CRON_NEWS_SCAN=0 * * * *

# Legacy Ingest Job (optional)
# CRON_INGEST=*/30 * * * *
# CRON_TOKEN=your-cron-auth-token

# Automated Content Generation Settings
AUTO_GEN_SOURCES_LIMIT=50
AUTO_GEN_ARTICLES_LIMIT=5
AUTO_GEN_CATEGORIES=
AUTO_GEN_AUTO_PUBLISH=false
AUTO_GEN_MIN_LENGTH=200
AUTO_GEN_MAX_AGE_HOURS=24

# Debug/Development
DEBUG_LOG_RESPONSES=0
DEBUG_LOG_UPSTREAM=0
