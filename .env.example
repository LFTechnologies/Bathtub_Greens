# Example environment configuration
# Copy this file to node-news-api/.env and update with your values

# Server Configuration
PORT=4000
NODE_ENV=production

# Database
MONGO_URI=mongodb://mongodb:27017/node_news

# JWT Secret (generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Admin Origins (comma-separated list of allowed origins)
ADMIN_ORIGINS=http://localhost:3000

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o
MODERATION_MODEL=omni-moderation-latest

# RapidAPI Configuration (for news ingestion)
RAPIDAPI_KEY=your-rapidapi-key-here
RAPIDAPI_NEWS_URL=https://world-news3.p.rapidapi.com/search-news
RAPIDAPI_HOST=twitter241.p.rapidapi.com

# Cron Schedule (default: every 30 minutes)
CRON_INGEST=*/30 * * * *

# Site URL
SITE_URL=http://localhost:3000
